<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GDM2026.Views.SplashPage"
             BackgroundColor="#0B0B0B"
             Shell.NavBarIsVisible="False">
    <Grid>
        <VerticalStackLayout
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Spacing="18">
            <Border
                WidthRequest="180"
                HeightRequest="180"
                Background="White"
                Stroke="#E0E0E0"
                StrokeThickness="1"
                Padding="24">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="90" />
                </Border.StrokeShape>
                <Image
                    Source="logo.jpg"
                    Aspect="AspectFit"
                    AutomationId="SplashLogo" />
            </Border>

            <ActivityIndicator
                Color="#D4AF37"
                IsRunning="True"
                WidthRequest="56"
                HeightRequest="56" />

            <Label
                Text="VÃ©rification de votre session..."
                TextColor="#D4AF37"
                FontSize="16"
                HorizontalTextAlignment="Center" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>
