<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GDM2026.Views.HistoirePage"
             x:Name="HistoirePageRoot"
             BackgroundColor="#0B0B0B"
             Title="Histoire">

    <ContentPage.Resources>
        <Color x:Key="GoldText">#D4AF37</Color>
        <Color x:Key="CardBackground">#151515</Color>
    </ContentPage.Resources>

    <Shell.BackButtonBehavior>
        <BackButtonBehavior Command="{Binding GoBackCommand}" />
    </Shell.BackButtonBehavior>

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="18">
            <Border
                Background="{StaticResource CardBackground}"
                Stroke="#000000"
                StrokeThickness="1.5"
                Padding="20">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="18" />
                </Border.StrokeShape>

                <VerticalStackLayout Spacing="16">
                    <Label
                        Text="Histoire"
                        FontSize="28"
                        FontAttributes="Bold"
                        HorizontalTextAlignment="Center"
                        TextColor="{StaticResource GoldText}" />

                    <Label
                        Text="GÃ©rez les histoires dans le mÃªme esprit que les ActualitÃ©s : actions guidÃ©es, formulaire sombre et validations explicites."
                        FontSize="16"
                        HorizontalTextAlignment="Center"
                        TextColor="{StaticResource GoldText}"
                        Opacity="0.85" />

                    <VerticalStackLayout Spacing="10">
                        <Button
                            Text="+ Nouvelle histoire"
                            BackgroundColor="#303030"
                            TextColor="{StaticResource GoldText}"
                            Command="{Binding ShowCreatePanelCommand}" />
                        <Button
                            Text="Mettre Ã  jour une histoire"
                            BackgroundColor="#303030"
                            TextColor="{StaticResource GoldText}"
                            Command="{Binding ShowUpdatePanelCommand}" />
                        <Button
                            Text="ðŸ”„ Charger / Recharger"
                            BackgroundColor="#252525"
                            TextColor="{StaticResource GoldText}"
                            Command="{Binding RefreshHistoiresCommand}" />
                    </VerticalStackLayout>

                    <Border
                        IsVisible="{Binding IsUpdateMode}"
                        Background="#1E1E1E"
                        Padding="14"
                        Stroke="#2D2D2D">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="14" />
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="12">
                            <Label
                                Text="SÃ©lectionnez une histoire Ã  modifier"
                                FontAttributes="Bold"
                                TextColor="{StaticResource GoldText}" />

                            <ActivityIndicator
                                IsRunning="{Binding IsLoadingHistoires}"
                                IsVisible="{Binding IsLoadingHistoires}"
                                Color="{StaticResource GoldText}" />

                            <CollectionView
                                ItemsSource="{Binding Histoires}"
                                SelectionMode="Single"
                                SelectedItem="{Binding SelectedHistoire}"
                                HeightRequest="220">
                                <CollectionView.ItemsLayout>
                                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="8" />
                                </CollectionView.ItemsLayout>
                                <CollectionView.EmptyView>
                                    <Label
                                        Text="Aucune histoire n'a encore Ã©tÃ© chargÃ©e."
                                        TextColor="{StaticResource GoldText}"
                                        HorizontalTextAlignment="Center"
                                        Opacity="0.6" />
                                </CollectionView.EmptyView>
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#111" Stroke="#2D2D2D" StrokeThickness="1" Padding="10" Margin="0,4">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="12" />
                                            </Border.StrokeShape>
                                            <VerticalStackLayout Spacing="4">
                                                <Label
                                                    Text="{Binding DisplayTitle}"
                                                    TextColor="{StaticResource GoldText}"
                                                    FontAttributes="Bold" />
                                                <Label
                                                    Text="{Binding DisplayDate}"
                                                    TextColor="{StaticResource GoldText}"
                                                    FontSize="13" />
                                                <Label
                                                    Text="{Binding DisplayImage}"
                                                    TextColor="{StaticResource GoldText}"
                                                    FontSize="13"
                                                    LineBreakMode="TailTruncation" />
                                            </VerticalStackLayout>
                                        </Border>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>

                            <Label
                                Text="{Binding HistoiresStatusMessage}"
                                TextColor="{StaticResource GoldText}"
                                FontSize="13"
                                Opacity="0.85"
                                HorizontalTextAlignment="Center" />

                            <Button
                                Text="Supprimer l'histoire sÃ©lectionnÃ©e"
                                Command="{Binding DeleteHistoireCommand}"
                                BackgroundColor="#4A1010"
                                TextColor="{StaticResource GoldText}"
                                IsEnabled="{Binding HasHistoireSelection}" />
                        </VerticalStackLayout>
                    </Border>

                    <Border
                        IsVisible="{Binding IsFormSectionVisible}"
                        Background="#1E1E1E"
                        Padding="14"
                        Stroke="#2D2D2D">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="14" />
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="12">
                            <Label
                                Text="{Binding FormHeader}"
                                FontAttributes="Bold"
                                TextColor="{StaticResource GoldText}"
                                FontSize="20" />

                            <Label
                                Text="{Binding FormHelperMessage}"
                                TextColor="{StaticResource GoldText}"
                                FontSize="13"
                                Opacity="0.8" />

                            <VerticalStackLayout Spacing="10" IsEnabled="{Binding IsFormInputEnabled}">
                                <Label Text="Titre" TextColor="{StaticResource GoldText}" FontAttributes="Bold" />
                                <Entry
                                    Placeholder="Titre de l'histoire"
                                    Text="{Binding Titre}"
                                    TextColor="{StaticResource GoldText}"
                                    PlaceholderColor="#777"
                                    BackgroundColor="#121212" />

                                <Label Text="Texte" TextColor="{StaticResource GoldText}" FontAttributes="Bold" />
                                <Editor
                                    Placeholder="Contenu de l'histoire"
                                    Text="{Binding Texte}"
                                    TextColor="{StaticResource GoldText}"
                                    PlaceholderColor="#777"
                                    BackgroundColor="#121212"
                                    AutoSize="TextChanges"
                                    HeightRequest="120" />

                                <Label Text="Image de l'histoire" TextColor="{StaticResource GoldText}" FontAttributes="Bold" />

                                <HorizontalStackLayout Spacing="8">
                                    <Button
                                        Text="ðŸ“· Prendre une photo"
                                        Command="{Binding CapturePhotoCommand}"
                                        BackgroundColor="#303030"
                                        TextColor="{StaticResource GoldText}" />
                                    <Button
                                        Text="ðŸ–¼ï¸ BibliothÃ¨que"
                                        Command="{Binding PickFromLibraryCommand}"
                                        BackgroundColor="#303030"
                                        TextColor="{StaticResource GoldText}" />
                                </HorizontalStackLayout>

                                <Button
                                    Text="â¬†ï¸ Envoyer l'image"
                                    Command="{Binding UploadImageCommand}"
                                    IsEnabled="{Binding HasLocalImageSelection}"
                                    BackgroundColor="#C18F1A"
                                    TextColor="{StaticResource GoldText}" />

                                <ActivityIndicator
                                    IsRunning="{Binding IsImageUploading}"
                                    IsVisible="{Binding IsImageUploading}"
                                    Color="{StaticResource GoldText}" />

                                <Label
                                    Text="{Binding SelectedImageLabel}"
                                    TextColor="{StaticResource GoldText}"
                                    FontSize="13"
                                    Opacity="0.85" />

                                <Label
                                    Text="{Binding ImageStatusMessage}"
                                    TextColor="{StaticResource GoldText}"
                                    FontSize="13"
                                    Opacity="0.75" />

                                <Border
                                    Background="#111"
                                    Stroke="#2D2D2D"
                                    StrokeThickness="1"
                                    Padding="10"
                                    IsVisible="{Binding HasLocalImageSelection}">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="12" />
                                    </Border.StrokeShape>
                                    <Image Source="{Binding SelectedImagePreview}" Aspect="AspectFit" HeightRequest="200" />
                                </Border>

                                <Label Text="URL gÃ©nÃ©rÃ©e" TextColor="{StaticResource GoldText}" FontAttributes="Bold" />
                                <Entry
                                    Placeholder="images/nom-image.jpg"
                                    Text="{Binding UrlImage}"
                                    TextColor="{StaticResource GoldText}"
                                    PlaceholderColor="#777"
                                    BackgroundColor="#121212"
                                    IsReadOnly="True" />

                                <Label Text="Date de l'histoire" TextColor="{StaticResource GoldText}" FontAttributes="Bold" />
                                <Entry
                                    Placeholder="AAAA-MM-JJ"
                                    Text="{Binding DateHistoireText}"
                                    TextColor="{StaticResource GoldText}"
                                    PlaceholderColor="#777"
                                    BackgroundColor="#121212" />
                            </VerticalStackLayout>

                            <ActivityIndicator
                                IsRunning="{Binding IsBusy}"
                                IsVisible="{Binding IsBusy}"
                                Color="{StaticResource GoldText}" />

                            <Label
                                Text="{Binding StatusMessage}"
                                TextColor="{StaticResource GoldText}"
                                FontSize="13"
                                Opacity="0.85"
                                HorizontalTextAlignment="Center" />

                            <Button
                                Text="{Binding FormActionButtonText}"
                                Command="{Binding FormActionCommand}"
                                BackgroundColor="#303030"
                                TextColor="{StaticResource GoldText}"
                                IsEnabled="{Binding IsFormActionEnabled}" />
                        </VerticalStackLayout>
                    </Border>
                </VerticalStackLayout>
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
