<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GDM2026.CategoryDetailPage"
             x:Name="CategoryDetailPageRoot"
             BackgroundColor="#0B0B0B">
    <Shell.BackButtonBehavior>
        <BackButtonBehavior Command="{Binding NavigateHomeCommand}" />
    </Shell.BackButtonBehavior>
    <ContentPage.Resources>
        <Color x:Key="GoldText">#D4AF37</Color>
        <Color x:Key="CardBackground">#151515</Color>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="18">
            <Border
                Background="{StaticResource CardBackground}"
                Stroke="#000000"
                StrokeThickness="1.5"
                Padding="24">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="18" />
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="12">
                    <Label
                        FontSize="28"
                        FontAttributes="Bold"
                        HorizontalTextAlignment="Center"
                        TextColor="{StaticResource GoldText}"
                        Text="{Binding Title}" />

                    <Label
                        FontSize="16"
                        HorizontalTextAlignment="Center"
                        TextColor="{StaticResource GoldText}"
                        Opacity="0.85"
                        Text="{Binding Description}" />

                    <Label
                        FontSize="14"
                        HorizontalTextAlignment="Center"
                        TextColor="{StaticResource GoldText}"
                        Opacity="0.75"
                        LineBreakMode="WordWrap"
                        Text="{Binding Hint}" />
                </VerticalStackLayout>
            </Border>

            <Border
                Background="{StaticResource CardBackground}"
                Stroke="#000000"
                StrokeThickness="1.5"
                Padding="20">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="18" />
                </Border.StrokeShape>

                <VerticalStackLayout Spacing="14">
                    <Label
                        Text="Catégories parentes"
                        FontSize="24"
                        FontAttributes="Bold"
                        HorizontalTextAlignment="Center"
                        TextColor="{StaticResource GoldText}" />

                    <Label
                        Text="Choisissez une action pour créer ou modifier les catégories parentes."
                        FontSize="14"
                        HorizontalTextAlignment="Center"
                        TextColor="{StaticResource GoldText}"
                        Opacity="0.85"
                        LineBreakMode="WordWrap" />

                    <VerticalStackLayout Spacing="8">
                        <Button
                            Text="+ Nouvelle catégorie parente"
                            BackgroundColor="#303030"
                            TextColor="{StaticResource GoldText}"
                            Command="{Binding ShowParentCreateCommand}" />
                        <Button
                            Text="Mettre à jour une catégorie parente"
                            BackgroundColor="#303030"
                            TextColor="{StaticResource GoldText}"
                            Command="{Binding ShowParentUpdateCommand}" />
                        <Button
                            Text="Gérer les catégories filles"
                            BackgroundColor="#303030"
                            TextColor="{StaticResource GoldText}"
                            Command="{Binding ToggleCategorySectionCommand}" />
                    </VerticalStackLayout>

                    <Frame
                        IsVisible="{Binding IsParentFormVisible}"
                        BackgroundColor="#1E1E1E"
                        Padding="16"
                        CornerRadius="14"
                        HasShadow="False"
                        BorderColor="#2D2D2D">
                        <VerticalStackLayout Spacing="12">
                            <Label
                                Text="{Binding ParentFormHeader}"
                                FontAttributes="Bold"
                                FontSize="20"
                                TextColor="{StaticResource GoldText}" />

                            <Label
                                Text="{Binding ParentHelperMessage}"
                                FontSize="13"
                                TextColor="{StaticResource GoldText}"
                                Opacity="0.8"
                                LineBreakMode="WordWrap" />

                            <Entry
                                Placeholder="Nom de la catégorie parente"
                                Text="{Binding ParentNameInput}"
                                TextColor="{StaticResource GoldText}"
                                PlaceholderColor="#777"
                                BackgroundColor="#121212" />

                            <ActivityIndicator
                                IsRunning="{Binding IsParentListLoading}"
                                IsVisible="{Binding IsParentListLoading}"
                                Color="{StaticResource GoldText}" />

                            <Label
                                Text="{Binding ParentListMessage}"
                                FontSize="13"
                                TextColor="{StaticResource GoldText}"
                                Opacity="0.75"
                                IsVisible="{Binding IsParentUpdateMode}" />

                            <CollectionView
                                ItemsSource="{Binding ParentCategories}"
                                SelectionMode="Single"
                                SelectedItem="{Binding SelectedParentForEdit}"
                                IsVisible="{Binding IsParentUpdateMode}"
                                HeightRequest="220">
                                <CollectionView.ItemsLayout>
                                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="8" />
                                </CollectionView.ItemsLayout>
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#111" Stroke="#2D2D2D" StrokeThickness="1" Padding="10" Margin="0,4">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="12" />
                                            </Border.StrokeShape>
                                            <VerticalStackLayout Spacing="4">
                                                <Label
                                                    Text="{Binding DisplayName}"
                                                    TextColor="{StaticResource GoldText}"
                                                    FontAttributes="Bold" />
                                                <Label
                                                    Text="{Binding Id, StringFormat='Id : {0}'}"
                                                    FontSize="12"
                                                    TextColor="{StaticResource GoldText}"
                                                    Opacity="0.75" />
                                            </VerticalStackLayout>
                                        </Border>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>

                            <Button
                                Text="{Binding ParentActionButtonText}"
                                Command="{Binding ParentActionCommand}"
                                BackgroundColor="#C18F1A"
                                TextColor="{StaticResource GoldText}" />
                        </VerticalStackLayout>
                    </Frame>

                    <Label
                        Text="{Binding ParentStatusMessage}"
                        FontSize="14"
                        TextColor="{StaticResource GoldText}"
                        LineBreakMode="WordWrap" />
                </VerticalStackLayout>
            </Border>

            <Frame
                IsVisible="{Binding IsCategorySectionVisible}"
                BackgroundColor="#1E1E1E"
                Padding="18"
                CornerRadius="18"
                HasShadow="False"
                BorderColor="#2D2D2D">
                <VerticalStackLayout Spacing="14">
                    <Label
                        Text="Gestion des catégories filles"
                        FontSize="22"
                        FontAttributes="Bold"
                        TextColor="{StaticResource GoldText}" />

                    <Label
                        Text="Choisissez de créer ou mettre à jour une catégorie puis remplissez le formulaire."
                        FontSize="13"
                        TextColor="{StaticResource GoldText}"
                        Opacity="0.85" />

                    <VerticalStackLayout Spacing="8">
                        <Button
                            Text="+ Nouvelle catégorie"
                            BackgroundColor="#303030"
                            TextColor="{StaticResource GoldText}"
                            Command="{Binding ShowCategoryCreateCommand}" />
                        <Button
                            Text="Mettre à jour une catégorie"
                            BackgroundColor="#303030"
                            TextColor="{StaticResource GoldText}"
                            Command="{Binding ShowCategoryUpdateCommand}" />
                    </VerticalStackLayout>

                    <Frame
                        IsVisible="{Binding IsCategoryFormVisible}"
                        BackgroundColor="#101010"
                        Padding="16"
                        CornerRadius="14"
                        HasShadow="False"
                        BorderColor="#2D2D2D">
                        <VerticalStackLayout Spacing="12">
                            <Label
                                Text="{Binding CategoryFormHeader}"
                                FontAttributes="Bold"
                                FontSize="20"
                                TextColor="{StaticResource GoldText}" />

                            <Label
                                Text="{Binding CategoryHelperMessage}"
                                FontSize="13"
                                TextColor="{StaticResource GoldText}"
                                Opacity="0.8"
                                LineBreakMode="WordWrap" />

                            <Entry
                                Placeholder="Nom de la catégorie"
                                Text="{Binding CategoryNameInput}"
                                TextColor="{StaticResource GoldText}"
                                PlaceholderColor="#777"
                                BackgroundColor="#121212" />

                            <Label
                                Text="Catégorie parente"
                                FontAttributes="Bold"
                                TextColor="{StaticResource GoldText}" />

                            <Picker
                                Title="Sélectionnez une catégorie parente"
                                ItemsSource="{Binding ParentCategories}"
                                ItemDisplayBinding="{Binding DisplayName}"
                                SelectedItem="{Binding SelectedParentForCategory}"
                                TitleColor="{StaticResource GoldText}"
                                TextColor="{StaticResource GoldText}" />

                            <ActivityIndicator
                                IsRunning="{Binding IsCategoryListLoading}"
                                IsVisible="{Binding IsCategoryListLoading}"
                                Color="{StaticResource GoldText}" />

                            <Label
                                Text="{Binding CategoryListMessage}"
                                FontSize="13"
                                TextColor="{StaticResource GoldText}"
                                Opacity="0.75"
                                IsVisible="{Binding IsCategoryUpdateMode}" />

                            <CollectionView
                                ItemsSource="{Binding Categories}"
                                SelectionMode="Single"
                                SelectedItem="{Binding SelectedCategoryForEdit}"
                                IsVisible="{Binding IsCategoryUpdateMode}"
                                HeightRequest="220">
                                <CollectionView.ItemsLayout>
                                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="8" />
                                </CollectionView.ItemsLayout>
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#111" Stroke="#2D2D2D" StrokeThickness="1" Padding="10" Margin="0,4">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="12" />
                                            </Border.StrokeShape>
                                            <VerticalStackLayout Spacing="4">
                                                <Label
                                                    Text="{Binding DisplayName}"
                                                    TextColor="{StaticResource GoldText}"
                                                    FontAttributes="Bold" />
                                                <Label
                                                    Text="{Binding ParentDisplayName}"
                                                    FontSize="12"
                                                    TextColor="{StaticResource GoldText}"
                                                    Opacity="0.75" />
                                            </VerticalStackLayout>
                                        </Border>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>

                            <Button
                                Text="{Binding CategoryActionButtonText}"
                                Command="{Binding CategoryActionCommand}"
                                BackgroundColor="#C18F1A"
                                TextColor="{StaticResource GoldText}" />
                        </VerticalStackLayout>
                    </Frame>

                    <Label
                        Text="{Binding CategoryStatusMessage}"
                        FontSize="14"
                        TextColor="{StaticResource GoldText}"
                        LineBreakMode="WordWrap" />
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
