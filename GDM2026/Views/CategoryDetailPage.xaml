<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GDM2026.CategoryDetailPage"
             BackgroundColor="#0B0B0B">
    <ContentPage.Resources>
        <Color x:Key="GoldText">#D4AF37</Color>
        <Color x:Key="CardBackground">#151515</Color>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="18">
            <Border
                Background="{StaticResource CardBackground}"
                Stroke="#000000"
                StrokeThickness="1.5"
                Padding="24">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="18" />
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="12">
                    <Label
                        FontSize="28"
                        FontAttributes="Bold"
                        HorizontalTextAlignment="Center"
                        TextColor="{StaticResource GoldText}"
                        Text="{Binding Title}" />

                    <Label
                        FontSize="16"
                        HorizontalTextAlignment="Center"
                        TextColor="{StaticResource GoldText}"
                        Text="{Binding Description}" />

                    <Label
                        FontSize="14"
                        HorizontalTextAlignment="Center"
                        TextColor="{StaticResource GoldText}"
                        Opacity="0.8"
                        LineBreakMode="WordWrap"
                        Text="{Binding Hint}" />
                </VerticalStackLayout>
            </Border>

            <VerticalStackLayout Spacing="12" IsVisible="{Binding IsCategoryPage}">
                <Border
                    Background="{StaticResource CardBackground}"
                    Stroke="#000000"
                    StrokeThickness="1.5"
                    Padding="18">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="14" />
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="10">
                        <Label
                            Text="Créer une nouvelle catégorie"
                            FontSize="20"
                            FontAttributes="Bold"
                            TextColor="{StaticResource GoldText}" />

                        <Entry
                            Placeholder="Nom de la catégorie"
                            Text="{Binding NewCategoryName}"
                            TextColor="White" />

                        <Button
                            Text="Créer"
                            Command="{Binding CreateCategoryCommand}"
                            BackgroundColor="#D4AF37"
                            TextColor="#0B0B0B"
                            CornerRadius="12"
                            Padding="14,10"
                            FontAttributes="Bold" />

                        <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />
                    </VerticalStackLayout>
                </Border>

                <Label
                    Text="Catégories existantes"
                    FontSize="22"
                    FontAttributes="Bold"
                    TextColor="{StaticResource GoldText}" />

                <Label
                    Text="{Binding CategoryStatus}"
                    FontSize="14"
                    TextColor="{StaticResource GoldText}"
                    Opacity="0.85"
                    IsVisible="{Binding HasCategoryStatus}" />

                <CollectionView ItemsSource="{Binding Categories}" SelectionMode="None">
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout Orientation="Vertical" Span="1" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Margin="0,6"
                                Padding="16"
                                Background="{StaticResource CardBackground}"
                                Stroke="#000000"
                                StrokeThickness="1.5">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="14" />
                                </Border.StrokeShape>
                                <VerticalStackLayout Spacing="6">
                                    <Label
                                        Text="{Binding DisplayName}"
                                        FontSize="18"
                                        FontAttributes="Bold"
                                        TextColor="{StaticResource GoldText}" />
                                    <Label
                                        Text="{Binding Description}"
                                        FontSize="14"
                                        TextColor="{StaticResource GoldText}"
                                        Opacity="0.8"
                                        LineBreakMode="WordWrap" />
                                </VerticalStackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>

            <VerticalStackLayout Spacing="12" IsVisible="{Binding IsPromoCategoryPage}">
                <Border
                    Background="{StaticResource CardBackground}"
                    Stroke="#000000"
                    StrokeThickness="1.5"
                    Padding="18">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="14" />
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="10">
                        <Label
                            Text="Créer une nouvelle catégorie promo"
                            FontSize="20"
                            FontAttributes="Bold"
                            TextColor="{StaticResource GoldText}" />

                        <Entry
                            Placeholder="Nom de la catégorie promo"
                            Text="{Binding NewPromoCategoryName}"
                            TextColor="White" />

                        <Button
                            Text="Créer"
                            Command="{Binding CreatePromoCategoryCommand}"
                            BackgroundColor="#D4AF37"
                            TextColor="#0B0B0B"
                            CornerRadius="12"
                            Padding="14,10"
                            FontAttributes="Bold" />

                        <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />
                    </VerticalStackLayout>
                </Border>

                <Label
                    Text="Catégories promo existantes"
                    FontSize="22"
                    FontAttributes="Bold"
                    TextColor="{StaticResource GoldText}" />

                <Label
                    Text="{Binding PromoCategoryStatus}"
                    FontSize="14"
                    TextColor="{StaticResource GoldText}"
                    Opacity="0.85"
                    IsVisible="{Binding HasPromoCategoryStatus}" />

                <CollectionView ItemsSource="{Binding PromoCategories}" SelectionMode="None">
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout Orientation="Vertical" Span="1" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Margin="0,6"
                                Padding="16"
                                Background="{StaticResource CardBackground}"
                                Stroke="#000000"
                                StrokeThickness="1.5">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="14" />
                                </Border.StrokeShape>
                                <VerticalStackLayout Spacing="6">
                                    <Label
                                        Text="{Binding DisplayName}"
                                        FontSize="18"
                                        FontAttributes="Bold"
                                        TextColor="{StaticResource GoldText}" />
                                    <Label
                                        Text="{Binding Id, StringFormat='Identifiant : {0}'}"
                                        FontSize="13"
                                        TextColor="{StaticResource GoldText}"
                                        Opacity="0.75" />
                                </VerticalStackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>

            <VerticalStackLayout Spacing="12" IsVisible="{Binding IsSuperCategoryPage}">
                <Border
                    Background="{StaticResource CardBackground}"
                    Stroke="#000000"
                    StrokeThickness="1.5"
                    Padding="18">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="14" />
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="10">
                        <Label
                            Text="Créer une nouvelle super catégorie"
                            FontSize="20"
                            FontAttributes="Bold"
                            TextColor="{StaticResource GoldText}" />

                        <Entry
                            Placeholder="Nom de la super catégorie"
                            Text="{Binding NewSuperCategoryName}"
                            TextColor="White" />

                        <VerticalStackLayout Spacing="8">
                            <Label
                                Text="Sélection des sous-catégories"
                                FontSize="16"
                                FontAttributes="Bold"
                                TextColor="{StaticResource GoldText}" />

                            <Label
                                Text="{Binding SelectedSubCategorySummary}"
                                FontSize="13"
                                TextColor="{StaticResource GoldText}" />

                            <Button
                                Text="{Binding SubCategoryMenuLabel}"
                                Command="{Binding ToggleSubCategoryMenuCommand}"
                                BackgroundColor="#262626"
                                TextColor="{StaticResource GoldText}"
                                CornerRadius="10"
                                Padding="10,8" />

                            <Border
                                IsVisible="{Binding IsSubCategoryMenuOpen}"
                                BackgroundColor="#101010"
                                Stroke="#2D2D2D"
                                StrokeThickness="1.5"
                                Padding="12">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10" />
                                </Border.StrokeShape>
                                <VerticalStackLayout Spacing="8">
                                    <Label
                                        Text="{Binding SubCategoryStatus}"
                                        IsVisible="{Binding HasSubCategoryStatus}"
                                        FontSize="13"
                                        TextColor="{StaticResource GoldText}" />

                                    <CollectionView
                                        ItemsSource="{Binding AvailableSubCategories}"
                                        SelectionMode="None"
                                        HeightRequest="200">
                                        <CollectionView.ItemsLayout>
                                            <VerticalLinearItemsLayout />
                                        </CollectionView.ItemsLayout>
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate>
                                                <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12" Padding="4,6">
                                                    <CheckBox
                                                        IsChecked="{Binding IsSelected}"
                                                        VerticalOptions="Center" />
                                                    <VerticalStackLayout Grid.Column="1" Spacing="2">
                                                        <Label
                                                            Text="{Binding Name}"
                                                            FontSize="15"
                                                            FontAttributes="Bold"
                                                            TextColor="{StaticResource GoldText}" />
                                                        <Label
                                                            Text="{Binding Description}"
                                                            FontSize="13"
                                                            TextColor="{StaticResource GoldText}"
                                                            Opacity="0.8"
                                                            LineBreakMode="WordWrap" />
                                                    </VerticalStackLayout>
                                                </Grid>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>
                                </VerticalStackLayout>
                            </Border>

                            <Entry
                                Placeholder="Identifiants supplémentaires (séparés par des virgules)"
                                Text="{Binding NewSuperCategoryProducts}"
                                TextColor="White" />
                        </VerticalStackLayout>

                        <Button
                            Text="Créer"
                            Command="{Binding CreateSuperCategoryCommand}"
                            BackgroundColor="#D4AF37"
                            TextColor="#0B0B0B"
                            CornerRadius="12"
                            Padding="14,10"
                            FontAttributes="Bold" />

                        <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />
                    </VerticalStackLayout>
                </Border>

                <Label
                    Text="Super catégories existantes"
                    FontSize="22"
                    FontAttributes="Bold"
                    TextColor="{StaticResource GoldText}" />

                <Label
                    Text="{Binding SuperCategoryStatus}"
                    FontSize="14"
                    TextColor="{StaticResource GoldText}"
                    Opacity="0.85"
                    IsVisible="{Binding HasSuperCategoryStatus}" />

                <CollectionView ItemsSource="{Binding SuperCategories}" SelectionMode="None">
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout Orientation="Vertical" Span="1" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Margin="0,6"
                                Padding="16"
                                Background="{StaticResource CardBackground}"
                                Stroke="#000000"
                                StrokeThickness="1.5">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="14" />
                                </Border.StrokeShape>
                                <VerticalStackLayout Spacing="6">
                                    <Label
                                        Text="{Binding DisplayName}"
                                        FontSize="18"
                                        FontAttributes="Bold"
                                        TextColor="{StaticResource GoldText}" />
                                    <Label
                                        Text="{Binding Description}"
                                        FontSize="14"
                                        TextColor="{StaticResource GoldText}"
                                        Opacity="0.8"
                                        LineBreakMode="WordWrap" />
                                    <Label
                                        Text="{Binding ProductCount, StringFormat='Produits associés : {0}'}"
                                        FontSize="13"
                                        TextColor="{StaticResource GoldText}"
                                        Opacity="0.75" />
                                </VerticalStackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
